<h1>予約フォーム</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
   <%= form_for(@reserve) do |f| %>
    <div><%= f.label :date %>
    <%= f.date_field :date %></div>

    <div><%= f.label :number %>
    <%= f.number_field :number %></div>
    
    <div><%= f.label :user_id %>
    <%= f.select :user_id, User.all.map{ |usr| [usr.name,usr.id] } %></div>
    
    <div><%= f.label :place_id %>
    <%= f.collection_select :place_id,@places, :id, :area%></div>

    <%= f.submit "予約する" %>
   <% end %>
  </div>
</div>

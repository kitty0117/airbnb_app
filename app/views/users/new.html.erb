<h1>新規登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
   <%= form_for(@user) do |f| %>
   <%= render 'shared/error_messages' %>
    <div><%= f.label :name %>
    <%= f.text_field :name %></div>

    <div><%= f.label :email %>
    <%= f.text_field :email %></div>
    
    <div><%= f.label :password %>
    <%= f.password_field :password %></div>

    <%= f.submit "登録する" %>
   <% end %>
  </div>
</div>
